<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:background="@drawable/bg_gradient"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:id="@+id/contentDialog">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center|left"

        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pickedDayTextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/white"
            android:textSize="25sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iconImageViewAlert"
            tools:src="@drawable/cloudy_night"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contentAlertDIalogTextView"
        android:textColor="@android:color/white"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_below="@+id/contentAlertDIalogTextView"
            android:layout_height="wrap_content"
            android:id="@+id/linearlayout132"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:id="@+id/precipIconDialogDaily"

                android:src="@drawable/precipitation"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/precipChanceDialogTextView"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linearlayout132"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout5"
            android:gravity="center_vertical"
            android:weightSum="1">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:id="@+id/precipIntensityMaxIcon"
                android:src="@drawable/water"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/precipIntensityMaxTextView"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_weight="0.36"/>
        </LinearLayout>


    </RelativeLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/contentDialog"
        android:paddingTop="15dp"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/alertDialogButton"
            android:text="@string/ok_button"
            android:background="#455A64"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"/>



    </LinearLayout>
</RelativeLayout>